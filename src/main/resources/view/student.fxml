<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.StudentController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <!-- Search Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <Label text="Search:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="searchField" promptText="Search by bus, route, driver..."
                   styleClass="search-field" onKeyReleased="#handleSearch"
                   HBox.hgrow="ALWAYS"/>
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
    </HBox>

    <TableView fx:id="busTable" styleClass="table-view" prefHeight="500">
        <columns>
            <TableColumn text="Bus No" fx:id="busNumberCol" prefWidth="140"/>
            <TableColumn text="Departure" fx:id="departureCol" prefWidth="100"/>
            <TableColumn text="From" fx:id="fromCol" prefWidth="120"/>
            <TableColumn text="To" fx:id="toCol" prefWidth="120"/>
            <TableColumn text="Day" fx:id="dayCol" prefWidth="100"/>
            <TableColumn text="Trip For" fx:id="tripForCol" prefWidth="100"/>
            <TableColumn text="Driver Name" fx:id="driverNameCol" prefWidth="270"/>
            <TableColumn text="Driver Number" fx:id="driverNumberCol" prefWidth="300"/>
        </columns>
    </TableView>
</VBox>