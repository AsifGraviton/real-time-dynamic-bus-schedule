<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.AdminController">

    <top>
        <HBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 15;">
            <Label text="Admin Panel - HSTU Bus Schedule Management"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="busTable" style="-fx-background-color: white;">
            <columns>
                <TableColumn text="Bus No" fx:id="busNumberCol" prefWidth="140"/>
                <TableColumn text="Departure" fx:id="departureCol" prefWidth="100"/>
                <TableColumn text="From" fx:id="fromCol" prefWidth="120"/>
                <TableColumn text="To" fx:id="toCol" prefWidth="120"/>
                <TableColumn text="Day" fx:id="dayCol" prefWidth="100"/>
                <TableColumn text="Trip For" fx:id="tripForCol" prefWidth="100"/>
                <TableColumn text="Driver Name" fx:id="driverNameCol" prefWidth="270"/>
                <TableColumn text="Driver Number" fx:id="driverNumberCol" prefWidth="300"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Button text="Add Bus" onAction="#handleAddBus"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Button text="Remove Selected" onAction="#handleRemoveBus"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Filters:" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <ComboBox fx:id="dayFilter" promptText="Day Type"
                          style="-fx-background-color: white; -fx-padding: 8;"/>
                <ComboBox fx:id="tripFilter" promptText="Trip For"
                          style="-fx-background-color: white; -fx-padding: 8;"/>
                <TextField fx:id="searchField" promptText="Search buses..." onKeyReleased="#handleSearch"
                           style="-fx-background-color: white; -fx-padding: 8; -fx-pref-width: 200;"/>
                <Button text="Refresh" onAction="#handleRefresh"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>