<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="application.StudentController"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <VBox spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 20; -fx-background-radius: 10;">
        <Label text="Bus Schedule - Student View"
               style="-fx-text-fill: #2d3436; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        <Label text="View all available bus schedules with driver information"
               style="-fx-text-fill: #636e72;"/>
    </VBox>

    <TableView fx:id="busTable" prefHeight="500" style="-fx-background-color: white;">
        <columns>
            <TableColumn text="Bus No" fx:id="busNumberCol" prefWidth="80"/>
            <TableColumn text="Departure" fx:id="departureCol" prefWidth="100"/>
            <TableColumn text="From" fx:id="fromCol" prefWidth="120"/>
            <TableColumn text="To" fx:id="toCol" prefWidth="120"/>
            <TableColumn text="Day" fx:id="dayCol" prefWidth="80"/>
            <TableColumn text="Trip For" fx:id="tripForCol" prefWidth="90"/>
            <TableColumn text="Driver Name" fx:id="driverNameCol" prefWidth="120"/>
            <TableColumn text="Driver Number" fx:id="driverNumberCol" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>