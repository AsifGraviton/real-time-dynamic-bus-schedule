<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="application.AdminController">
    <top>
        <HBox spacing="10"><padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

            <Label text="Admin Panel - Manage Buses" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </top>
    <center>
        <TableView fx:id="busTable">
            <columns>
                <TableColumn text="Bus No" fx:id="busNumberCol" prefWidth="100"/>
                <TableColumn text="Departure" fx:id="departureCol" prefWidth="120"/>
                <TableColumn text="From" fx:id="fromCol" prefWidth="160"/>
                <TableColumn text="To" fx:id="toCol" prefWidth="160"/>
                <TableColumn text="Day" fx:id="dayCol" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="8" padding="10, 10, 10, 10">
            <Button text="Add Bus" onAction="#handleAddBus"/>
            <Button text="Remove Selected" onAction="#handleRemoveBus"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Search (bus/from/to)" onKeyReleased="#handleSearch" prefWidth="200"/>
            <ComboBox fx:id="dayFilter" onAction="#handleFilterChanged"/>
            <Button text="Refresh" onAction="#handleRefresh"/>
        </HBox>
    </bottom>
</BorderPane>
